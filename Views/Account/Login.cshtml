@model ArtistPortfolio.Models.DTO.UserLoginDTO
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">
                <div class="px-5 ms-xl-4">
                    <i class="fa-solid fa-palette fa-2x me-3 pt-5 mt-xl-4" style="color: #709085;"></i>
                    <span class="header-title h1 fw-bold mb-0">Мартин Буровски</span>
                </div>
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
                    <form asp-action="Login" asp-controller="Account" method="post" style="width: 23rem;">
                        @Html.ValidationSummary()
                        <div class="form-outline mb-4">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg" })
                            @Html.ValidationMessageFor(m => m.Email)
                            <label class="form-label" asp-for="Email">Електронска пошта</label>
                        </div>
                        <div class="form-outline mb-4">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg" })
                            @Html.ValidationMessageFor(m => m.Password)
                            <label class="form-label" asp-for="Password">Лозинка</label>
                        </div>
                        <div class="pt-1 mb-4">
                            <button type="submit" class="btn btn-success btn-lg">Најави се</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
                     alt="Login image" class="w-100 vh-100 m-0" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>