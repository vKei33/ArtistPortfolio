@using Microsoft.AspNetCore.Identity
@using ArtistPortfolio.Models.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    string path = Context.Request.Path;
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark @(path.Equals("/Manage") ? "active" : "")" asp-controller="Manage" asp-action="Index">Поставки</a>
        </li>
        <li class="nav-item ms-3">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-light text-dark"><i class="fa-solid fa-door-open"></i></button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Регистрација</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Најава</a>
        </li>
    }
</ul>

