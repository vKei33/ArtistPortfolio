@model ArtistPortfolio.Models.DTO.ChangePasswordDTO
@{
    ViewData["Title"] = "Поставки - Промени лозинка";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h1>Промена на лозинка</h1>

<form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal" role="form">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="OldPassword" class="col-md-2 control-label">Лозинка</label>
        <div class="col-md-10">
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mb-3">
        <label asp-for="NewPassword" class="col-md-2 control-label">Нова лозинка</label>
        <div class="col-md-10">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ConfirmPassword" class="col-md-2 control-label">Потврди нова лозинка</label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mb-3">
        <div class="col-md-offset-2 col-md-10">
            <a class="btn btn-danger me-2" asp-controller="Manage" asp-action="Index">Назад</a>
            <button type="submit" class="btn btn-success">Промени лозинка</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
