@model List<ArtistPortfolio.Models.Models.Biography>
@using Microsoft.AspNetCore.Mvc.Localization
@using System.Globalization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Биографија"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section my-5 px-2">
    @foreach (var biography in Model)
    {
        <div class="row">
            <div class="col-sm-12 col-md-5">
                <div class="text-center">
                    <img src="~/images/@biography.ImageUrl" class="img-responsive w-75" alt="Martin Burovski">
                </div>
            </div>

            <div class="col-sm-12 col-md-6">
                <h2 class="mb-3"><strong>@Localizer["Биографија"]</strong></h2>
                <hr />
                @if (CultureInfo.CurrentCulture.Name == "en-US")
                {
                    <p class="my-2">
                        @biography.BiographyContentEN
                    </p>
                }
                else
                {
                    <p class="my-2">
                        @biography.BiographyContentMK
                    </p>
                }
            </div>
        </div>
    }
</section>