@model List<ArtistPortfolio.Models.Models.Biography>
@{
    ViewData["Title"] = "Админ - Биографија";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="d-flex">
    <a class="btn btn-primary btn-sm @(Model.Count >= 1 ? "disabled" : "")" asp-action="AddBiography" asp-controller="BiographyDashboard">Додади биографија</a>
</div>
<div class="my-2">
    <div class="alert alert-info">
        <i class="fa-solid fa-circle-info me-2"></i> Не додавај нова биографија доколку си во можност да ја измениш постоечката биографија.
    </div>
</div>

<section class="px-2">
    <div class="biography-content mt-4">
        <div class="row">
            @foreach (var biography in Model)
            {
                <div class="col-sm-12 col-md-5">
                    <h5><strong>Македонски јазик:</strong></h5>
                    <hr />
                    <p>@biography.BiographyContentMK</p>
                </div>
                <div class="col-sm-12 col-md-5">
                    <h5><strong>Англиски јазик:</strong></h5>
                    <hr />
                    <p>@biography.BiographyContentEN</p>
                </div>
                <div class="col-sm-12 col-md-2">
                    <h5><strong>Акции:</strong></h5>
                    <hr />
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-controller="BiographyDashboard" asp-action="UpdateBiography" asp-route-id="@biography.Id" class="btn btn-outline-secondary btn-sm">Измени</a>
                        <form asp-controller="BiographyDashboard" asp-action="DeleteBiography" style="padding-left: 15px;">
                            <input type="hidden" name="id" value="@biography.Id">
                            <button type="submit" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></button>
                        </form>
                    </div>
                </div>
            }

        </div>
    </div>
</section>